<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/search_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/main_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="OurMeal Home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/line"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:background="@drawable/line"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/serach_result_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:src="@drawable/no_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="207dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/serach_result_title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif"
                            android:text="가게명 : "
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serach_result_num"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="serif"
                            android:text="평점 : "
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serach_result_addr"
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:fontFamily="serif"
                            android:text="주소"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serach_result_rcount"
                            android:layout_width="match_parent"
                            android:layout_height="102dp"
                            android:fontFamily="serif"
                            android:hint="달린 리뷰 갯수"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>